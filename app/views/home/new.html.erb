<div class="container">
    <%= form_tag "/home/create" do %>
      <div class="form-group">
        <label for="subject">제목</label>
        <input type="string" class="form-control" name="post_title" placeholder="제목을 입력하세요.">
      </div>
      <div class="form-group">
        <label for="writer">작성자</label>
        <input type="text" class="form-control"  name="post_name" placeholder="이름을 입력하세요." >
      </div>
    
     
      <div class="form-group">
        <label for=content">내용</label>
        <textarea class="form-control"  name="post_content" rows="3"></textarea>
      </div>
      <button type="submit" class="btn btn-primary">작성</button>
     
    <% end %>
</div>