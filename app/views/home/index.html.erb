
  <body id="page-top">
    <!-- Navigation -->


    <!-- Header -->
    <header class="masthead d-flex" id:"portfolio" >
      <div class="container text-center my-auto">
        <div class="container">
        <div class="content-section-heading text-center">
          
          <h2 class="mb-5">게시글 목록</h2>
        </div>
        <div class="container">
          
            
                    <div class="col-xs-12">
                        <table class="table table-hover">
                            <tr>
                                <th>제목</th>
                                <th>작성자</th>
                                <th>작성시간</th>
                            </tr>
                             <% @posts.each do |x| %>
                                  <tr>
                                      <td><a href="/home/show/<%=x.id%>"><%= x.title %></a></td>
                                      <td><%x.id%><%= x.name %></a></td>
                                      <td><%= x.created_at %></td>
                                  </tr>
                              <%end%>
                        </table>
                        <%= paginate @posts %>
                    </div>
    
      <div class="overlay"></div>
    </header>

    <!-- About -->
    <section class="content-section bg-light" id="about">
      <div class="container text-center">
        <div class="row">
          <div class="col-lg-20 mx-auto">
            <h1 class="mb-1">승팡의 게시판</h1>
            <p class="lead mb-5">익명으로 마음껏!</p>
            <a class="btn btn-dark btn-xl js-scroll-trigger" href="/home/new">글쓰기</a>
            <a class="btn btn-dark btn-xl js-scroll-trigger" href="#portfolio">글목록</a>
            
          </div>
        </div>
      </div>
    </section>

   

    




    <!-- Footer -->
    <footer class="footer text-center">
      <div class="container">
    
        <p class="text-muted small mb-0">Copyright &copy; 승팡의 게시판 2018</p>
      </div>
    </footer>

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded js-scroll-trigger" href="#page-top">
      <i class="fa fa-angle-up"></i>
    </a>

    <!-- Bootstrap core JavaScript -->
    <script src="assets/javascripts/jquery.js"></script>
    <script src="assets/javascripts/bootstrap.bundle.js"></script>

    <!-- Plugin JavaScript -->
    <script src="assets/javascripts/jquery.easing.js"></script>

    <!-- Custom scripts for this template -->
    <script src="assets/javascripts/stylish-portfolio.js"></script>

  </body>


